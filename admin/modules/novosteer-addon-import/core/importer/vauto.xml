<importer>
	<fields>
		<box title="Settings" width="7">
			<fields>			
				<set_adjust_doc type="textbox" title="Adjustment CSV"></set_adjust_doc>

				<set_import_discount type="textbox" suffix="%" mask="currency" title="Increase Sale Price" description="Set a percentage to show a discount of the same value"/>


				<subtitle_feed title="Field Relation" type="subtitle" />

				<set_stock type="droplist" title="Stock" empty="true" required="true" validate="A:1:200">
					<relation table="plugin:products_fields" table_lang="plugin:products_fields_lang" id="field_id" order="field_name ASC" condition="field_type in (3,4) ">							
						<text>
							<f1 field="field_name" />
							<f2 field="field_code" preffix="(" suffix=")"/>
						</text>
					</relation>
					<description>Select the stock id field, must be unique, and must be type single line.</description>
				</set_stock> 

			</fields>
		</box>
	</fields>


	<remove_fields>
		<subtitle>true</subtitle>
		<feed_duplicates>true</feed_duplicates>
		<feed_missing>true</feed_missing>
		<feed_missing_status>true</feed_missing_status>
		<button_info>true</button_info>
		<button_list>true</button_list>
		<button_details>true</button_details>
	</remove_fields>
</importer>